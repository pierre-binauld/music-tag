<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.melnykov.fab.ObservableScrollView
        android:id="@+id/scroll_organisation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:focusable="true" android:focusableInTouchMode="true">
            <android.support.v7.widget.CardView
                android:id="@+id/card_text_organisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:contentPadding="@dimen/activity_horizontal_margin"
                card_view:cardElevation="@dimen/card_elevation">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edit_text_organisation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_tags_organisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:contentPadding="@dimen/activity_horizontal_margin"
                card_view:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title"/>
                    <Button
                        android:id="@+id/btn_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/artist"/>
                    <Button
                        android:id="@+id/btn_album"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/album"/>
                    <Button
                        android:id="@+id/btn_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/year"/>
                    <Button
                        android:id="@+id/btn_disc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/disc"/>
                    <Button
                        android:id="@+id/btn_track"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/track"/>
                    <Button
                        android:id="@+id/btn_album_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/album_artist"/>
                    <Button
                        android:id="@+id/btn_composer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/composer"/>
                    <Button
                        android:id="@+id/btn_grouping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/grouping"/>
                    <Button
                        android:id="@+id/btn_genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/genre"/>
                    <Button
                        android:id="@+id/btn_slash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/slash"/>
                    <Button
                        android:id="@+id/btn_underscore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/underscore"/>
                    <Button
                        android:id="@+id/btn_hyphen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hyphen"/>
                    <Button
                        android:id="@+id/btn_space"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/space"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </com.melnykov.fab.ObservableScrollView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/organisation_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_done_24dp"
        fab:fab_colorNormal="@color/color_accent"
        fab:fab_colorPressed="@color/color_accent_pressed"
        fab:fab_colorRipple="@color/color_accent_hover" />
</FrameLayout>