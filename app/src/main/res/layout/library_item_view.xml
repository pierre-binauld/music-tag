<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="72dp">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/list_artwork_size"
        android:layout_height="@dimen/list_artwork_size"
        android:layout_marginStart="@dimen/list_artwork_margin_start"
        android:layout_marginLeft="@dimen/list_artwork_margin_start"
        android:layout_centerVertical="true"
        android:contentDescription="@string/thumbnail"
        android:src="@drawable/list_item_placeholder"
        app:border_width="0dp"
        app:shadow="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/list_text_margin_start"
        android:layout_marginLeft="@dimen/list_text_margin_start"
        android:layout_marginEnd="@dimen/list_text_margin_end"
        android:layout_marginRight="@dimen/list_text_margin_end"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout> 