<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="binauld.pierre.musictag.fragments.SuggestionFragment">

    <ListView
        android:id="@+id/list_suggestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:divider="@android:color/background_light"
        android:dividerHeight="0px"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_navigation_arrow_forward"
        fab:fab_colorNormal="@color/color_accent"
        fab:fab_colorPressed="@color/color_accent_pressed"
        fab:fab_colorRipple="@color/color_accent_hover" />

</FrameLayout>
