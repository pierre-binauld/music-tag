<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="SettingsTheme" parent="android:Theme.Holo" />

    <!--Progress bar style.-->
    <style name="HorizontalProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="NavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="rippleBackport">true</item>
    </style>
</resources>
