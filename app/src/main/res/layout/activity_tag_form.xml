<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_title"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/label_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artist"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_artist"
                android:layout_height="wrap_content"
                android:hint="@string/artist"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/label_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/album"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_album"
                android:layout_height="wrap_content"
                android:hint="@string/album"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_year"
                android:layout_height="wrap_content"
                android:hint="@string/year"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label_album_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/album_artist"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_album_artist"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label_composer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/composer"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_composer"
                android:layout_height="wrap_content"
                android:hint="@string/composer"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label_grouping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grouping"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_grouping"
                android:layout_height="wrap_content"
                android:hint="@string/grouping"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/genre"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_genre"
                android:layout_height="wrap_content"
                android:hint="@string/genre"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label_disk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disk"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_disk"
                android:layout_height="wrap_content"
                android:hint="@string/disk"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/track"
                android:textSize="24sp"
                android:layout_weight="2">
            </TextView>
            <EditText
                android:id="@+id/txt_track"
                android:layout_height="wrap_content"
                android:hint="@string/track"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_weight="1">
            </EditText>
        </LinearLayout>
        <Button
            android:id="@+id/ButtonConfirm"
            android:layout_height="wrap_content"
            android:text="@string/validate"
            android:layout_width="fill_parent"
            android:onClick="sendConfirmation">
        </Button>
    </LinearLayout>
</ScrollView>