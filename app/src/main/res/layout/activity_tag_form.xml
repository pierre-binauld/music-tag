<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_title_artist_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:layout_marginBottom="16dp"
            card_view:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:inputType="text" />

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/artist"
                    android:inputType="text" />

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/album"
                    android:inputType="text" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_year_disk_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:layout_marginBottom="16dp"
            card_view:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/year"
                    android:inputType="date"
                    android:layout_weight="1" />

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_disk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/disk"
                    android:inputType="number"
                    android:layout_weight="1" />

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_track"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/track"
                    android:inputType="number"
                    android:layout_weight="1" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:layout_marginBottom="16dp"
            card_view:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_album_artist"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="@string/album_artist"
                    android:inputType="text" />

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_composer"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="@string/composer"
                    android:inputType="text" />

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_grouping"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="@string/grouping"
                    android:inputType="text" />

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/txt_genre"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="@string/genre"
                    android:inputType="text" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_artwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:layout_marginBottom="16dp"
            card_view:contentPadding="16dp">

            <ImageView
                android:id="@+id/img_artwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>